import wollok.game.*
import level.*
import tiles.*

describe "tests para maps y niveles" {

	test "el map tiene un tamaño de 10 x 10 con una posición de inicio y una de fin" {
		var map = new Map(10,10)
		map.startPoint(3,3)
		map.endPoint(5,5)
		
		assert.equals(map.boardSize().x() , 10)
		assert.equals(map.boardSize().y() , 10)
		assert.equals(map.startPoint() , new Position(3,3))
		assert.equals(map.endPoint().position() , new Position(5,5))
		assert.that(map.carrots().isEmpty())
		assert.that(map.elements().isEmpty())
	}
	
	test "el map tiene 3 zanahorias" {
		var map = new Map(10,10)
		map.addCarrot(6,7)
		map.addCarrot(7,8)
		map.addCarrot(8,9)
		
		assert.equals(map.carrots().size(), 3)	
	}

	test "el map tiene 3 paredes" {
		var map = new Map(10,10)
		map.addElement(new Wall(6,7))
		map.addElement(new Wall(7,8))
		map.addElement(new Wall(8,9))
		
		assert.equals(map.elements().size(), 3)	
	}
}